<%= form_with model: @task do |f| %>

<div class="container">
<h2>Create New Task</h2>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :completed? %>
    <%= f.check_box :completed?, checked: false %>
  </div>
    <%= f.submit class: 'btn btn-primary mt-3' %>
  <% end %>

</div>
